<?xml version="1.0"?>
<ruleset name="Project Standards">
    <description>Code style rules for the production application under root/</description>
    <file>root/app</file>
    <file>unit</file>
    <exclude-pattern>root/vendor/</exclude-pattern>
    <rule ref="PSR12"/>
    
    <!-- Allow mixed declarations and side effects in test files -->
    <rule ref="PSR1.Files.SideEffects">
        <exclude-pattern>unit/*</exclude-pattern>
    </rule>
</ruleset>
